@model Lostil.Data.Models.Product
@{ Layout = "_Layout";}
<div class="container1">
    <form asp-action="ConclusionItemEdit" asp-controller="Tovar" method="post" enctype="multipart/form-data">
        <div asp-validation-summary="All" class="text-danger"></div>
        <input type="hidden" asp-for="ProductId" />
        <input type="hidden" asp-for="CategoryId" />

        <div class="form-group">
            <label asp-for="ProductName" class="control-label">Название Товара</label>
            <input type="text" asp-for="ProductName" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Price" class="control-label">Цена</label>
            <input type="text" asp-for="Price" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Description" class="control-label">Описание</label>
            <input type="text" asp-for="Description" class="form-control" />
        </div>
        <div class="image_border">
            <p><img src="@Url.Content(Model.ImagePath)" class="box_image"></p>
        </div>
        <div>
        <input type="file" name="uploadedFile" /><br>


                                                 <div class="form-group">
                                                     <input type="submit" value="Добавить" />
                                                 </div>
        </div>
    </form>
</div>