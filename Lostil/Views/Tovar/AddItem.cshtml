@model Lostil.Data.Models.ViewModel.AddItemViewModel
@{Layout = "_Layout"; }
<div class="container1">
    
    <form asp-action="AddItem" asp-controller="Tovar" method="post" enctype="multipart/form-data">
        <div asp-validation-summary="All"></div>
        <div class="form-group">
            <label asp-for="ProductName" class="control-label">Название</label>
            <input type="text" asp-for="ProductName" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Description" class="control-label">Описание</label>
            <input type="text" asp-for="Description" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Price" class="control-label">Цена</label>
            <input type="text" asp-for="Price" class="form-control" />
        </div>
        <select asp-for="CategoryId">
            <option value="2" >Для офиса</option>
            <option value="1">Для дома</option>
            <option value="3">Креатив</option>
        </select>
        <input type="file" name="uploadedFile" /><br>
        
        <div class="form-group">
            <input type="submit" value="Добавить" />
        </div>
    </form>
</div>